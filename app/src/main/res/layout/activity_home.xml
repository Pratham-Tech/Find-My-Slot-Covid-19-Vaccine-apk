<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools"
    android:background="@drawable/gradient_back2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/myConst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:padding="10sp"
                android:text="@string/search_by"
                android:textColor="#008BE3"
                android:textSize="35sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toTopOf="@id/radioGrp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:padding="10sp"

                app:layout_constraintBottom_toTopOf="@id/chooseVaccineTX"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtView">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="@string/Pincode"
                    android:textAlignment="center"
                    android:textColor="#009ECE"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="@string/district"
                    android:textAlignment="center"
                    android:textColor="#009ECE"
                    android:textSize="20sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/chooseVaccineTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/vaccine_type"
                android:textAlignment="center"
                android:textColor="#009ECE"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toTopOf="@id/covishieldCB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGrp" />

            <CheckBox
                android:id="@+id/covaxinCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/covaxin"
                android:textColor="#009ECE"

                app:layout_constraintBottom_toTopOf="@id/chooseAge"
                app:layout_constraintEnd_toStartOf="@+id/covishieldCB"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/covishieldCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/covishield"
                android:textColor="#009ECE"

                app:layout_constraintBottom_toTopOf="@id/chooseAge"
                app:layout_constraintEnd_toStartOf="@+id/sputnikCB"
                app:layout_constraintStart_toEndOf="@id/covaxinCB"
                app:layout_constraintTop_toBottomOf="@id/chooseVaccineTX" />

            <CheckBox
                android:id="@+id/sputnikCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/sputnik_v"
                android:textColor="#009ECE"

                app:layout_constraintBottom_toTopOf="@id/chooseAge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/covishieldCB" />

            <TextView
                android:id="@+id/chooseAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="#009ECE"
                android:textSize="21sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toTopOf="@id/radioGrp2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/covishieldCB" />

            <RadioGroup
                android:id="@+id/radioGrp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5sp"

                app:layout_constraintBottom_toTopOf="@id/listState"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chooseAge">

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:padding="10sp"
                    android:text="@string/_18"
                    android:textAlignment="center"
                    android:textColor="#009ECE"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    android:text="@string/_45"
                    android:textAlignment="center"
                    android:textColor="#009ECE"
                    android:textSize="20sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/pincodeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/enter_pincode_here"
                android:inputType="number"
                android:maxLength="6"
                android:textAlignment="center"
                android:textColor="#008BE3"
                android:textColorHint="#008BE3"
                android:textSize="25sp"

                app:layout_constraintBottom_toTopOf="@id/findSlots"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGrp2" />

            <Spinner
                android:id="@+id/listState"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                app:layout_constraintBottom_toTopOf="@id/listDistrict"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGrp2" />

            <Spinner
                android:id="@+id/listDistrict"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"

                app:layout_constraintBottom_toTopOf="@id/findSlots"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listState" />

            <Button
                android:id="@+id/findSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/find"
                android:textAlignment="center"
                android:textColor="#009ECE"
                android:textSize="25sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listDistrict" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|bottom"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3430847732969236/3564033152">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</ScrollView>

