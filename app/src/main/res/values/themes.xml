<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.FindMySlot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusBar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
<!--        <item name="android:minWidth">20dp</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">25dp</item>
        <item name="android:maxWidth">35dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:width">25dp</item>
    </style>

    <style name="Theme.FindMySlot..Fullscreen" parent="Theme.FindMySlot">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FindMySlot.FullscreenContainer" parent="Theme.FindMySlot">
    </style>
</resources>